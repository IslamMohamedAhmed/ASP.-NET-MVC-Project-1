@model DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
}


<h1 class="my-5 text-center text-danger">Are you sure you want delete Department No. @Model.Id with Details</h1>


<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Code">

        </label>
        <input readonly class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Name">

        </label>
        <input readonly class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="DateOfCreation">

        </label>
        <input readonly class="form-control" asp-for="DateOfCreation" />

    </div>
    <div class="mt-5">
        <input type="submit" value="Confirm" class="btn btn-outline-danger" />
        <a class="btn btn-outline-dark" asp-action="All">Cancel</a>
    </div>

</form>

