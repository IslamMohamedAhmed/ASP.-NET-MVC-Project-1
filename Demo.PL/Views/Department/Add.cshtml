@model DepartmentViewModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add New Department</h1>

<form asp-action="Add">

    <div class="my-2">
        <label class="col-form-label" asp-for="Code">

        </label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Name">

        </label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="DateOfCreation">

        </label>
        <input class="form-control" asp-for="DateOfCreation" />

    </div>

    <div class="mt-5">
        <input type="submit" value="Add Department" class="btn btn-outline-success" />
        <a class="btn btn-outline-dark" asp-action="All">Back to List</a>
    </div>

</form>


@section ValidationScriptSection {
    <partial name="../Shared/_ValidationScriptsPartial"/>

}

