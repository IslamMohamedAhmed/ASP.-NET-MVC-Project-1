@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}



<h1 class="my-5 text-center text-danger">Are you sure you want delete Employee No. @Model.Id with Details</h1>


<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
   
    <div>
        <input asp-for="ImageName" hidden />
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />

    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Name">

        </label>
        <input readonly class="form-control" asp-for="Name" />
        
    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Age">

        </label>
        <input readonly class="form-control" asp-for="Age" />

    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Address">

        </label>
        <input readonly class="form-control" asp-for="Address" />

    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="Salary">

        </label>
        <input readonly class="form-control" asp-for="Salary" />

    </div>
   <div class="row">
        <div class="my-2 col-md-3">
            <label class="col-form-label" asp-for="IsActive">

            </label>
            <select asp-for="IsActive" disabled class="form-select">
                <option value=true selected>True</option>
                <option value=false>False</option>

            </select>

        </div>
        <div class="my-2 col-md-9">
            <label class="col-form-label" asp-for="Email">

            </label>
            <input readonly class="form-control" asp-for="Email" />

        </div>
   </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="PhoneNumber">

        </label>
        <input readonly class="form-control" asp-for="PhoneNumber" />

    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="HireDate">

        </label>
        <input readonly class="form-control" asp-for="HireDate" />

    </div>
    <div class="my-2">
        <label class="col-form-label" asp-for="DateOfCreation">

        </label>
        <input readonly class="form-control" asp-for="DateOfCreation" />

    </div>






    
 
  
    <div class="mt-5">
        <input type="submit" value="Confirm" class="btn btn-outline-danger" />
        <a class="btn btn-outline-dark" asp-action="All">Cancel</a>
    </div>

</form>