@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetYourPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div asp-validation-summary="All"></div>
    <div class="agileits-top">
        <form asp-action="ResetYourPassword">

            <input asp-for="Email"  hidden/>
            <input asp-for="Token" hidden />

            <input class="text" asp-for="Password" placeholder="Password" required="">
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
           
            <input type="submit" value="Change Password">
        </form>
        
    </div>
</div>

@section ValidationScriptSection {
    <partial name="../Shared/_ValidationScriptsPartial" />

}

